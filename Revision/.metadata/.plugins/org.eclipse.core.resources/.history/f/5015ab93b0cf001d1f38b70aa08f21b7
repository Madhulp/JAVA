package question2;

public class Lion {
	
	private String name;
	private boolean isHungry;
	private int age;
	
	public static int totalDeaths;
	
	public static void printKillings(int n) {
		System.out.println("Total killings by lions in jungle = "+ totalDeaths);
	}
	
	public void thinking() {
		
		if(isHungry = false) {
			System.out.println( "Lion1 is sleeping");
		}
		
		if(isHungry = true && age>12) {
			totalDeaths += 2;
			System.out.println("Lion2 has eaten two animal");
		}
		
		if(isHungry = true && age<=12 && age>=2 ) {
			totalDeaths += 1;
			System.out.println("Lion3 has eaten one animal");
		}
		
		if(isHungry=true && age<2 ) {
			System.out.println("Lion4 is calling Mom");
		}
	}
	
	public static void main(String[] args) {
		Lion lion1 = new Lion();
		lion1.thinking();
		lion1.printKillings(2);
	}
}
